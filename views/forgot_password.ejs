<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  forgot password</h1>
        <% include ./partials/messages %>
        <form action="/users/forgot_password" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                />
              </div>
        <div class="form-group">
            <label for="physical_address">Enter your pet name</label>
            <input
              type="name"
              id="p_name"
              name="p_name"
              class="form-control"
              placeholder="Enter pet name (Security Question)"
              value="<%= typeof p_name != 'undefined' ? p_name : '' %>"
          />
        </div> 
        <button type="submit">Submit</button>         
        </form>
      </div>
    </div>
  </div>
  