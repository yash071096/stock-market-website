<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="physical_address1">Enter Address</label>
          <input
            type="address"
            id="physical_address1"
            name="physical_address1"
            class="form-control"
            placeholder="Enter Address Line 1"
            value="<%= typeof physical_address1 != 'undefined' ? physical_address1 : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="physical_address">Enter City</label>
          <input
            type="address"
            id="physical_address2"
            name="physical_address2"
            class="form-control"
            placeholder="Enter Address Line 2"
            value="<%= typeof physical_address2 != 'undefined' ? physical_address2 : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="physical_address">Enter ZIP Code</label>
          <input
            type="address"
            id="physical_address3"
            name="physical_address3"
            class="form-control"
            placeholder="Enter Address Line 3"
            value="<%= typeof physical_address3 != 'undefined' ? physical_address3 : '' %>"
          />
        </div>

        <div class="form-group">
            <label for="physical_address">Enter bnk</label>
            <input
              type="number"
              id="acc_num"
              name="acc_num"
              class="form-control"
              placeholder="Enter acc"
              value="<%= typeof acc_num != 'undefined' ? acc_num : '' %>"
            />
            <input
            type="number"
            id="routing_num"
            name="routing_num"
            class="form-control"
            placeholder="Enter rn"
            value="<%= typeof routing_num != 'undefined' ? routing_num : '' %>"
          />
          </div>

        

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
